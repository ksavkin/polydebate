# OpenRouter API Key
# Get your API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs API Key
# Get your API key at: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Gemini API Key (optional, for direct Gemini integration)
# Get your API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your_random_secret_key_here
FLASK_DEBUG=True

# CORS Settings
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=5001
HOST=0.0.0.0
APP_URL=http://localhost:5001

# Cache Settings (in seconds)
CACHE_MARKETS_TTL=300
CACHE_MARKET_DETAILS_TTL=120
CACHE_CATEGORIES_TTL=600
CACHE_MODELS_TTL=3600

# Debate Settings
MAX_MODELS_PER_DEBATE=10
MAX_ROUNDS=10
MODEL_TIMEOUT_SECONDS=30

# Allowed AI Models (comma-separated list)
# Only models in this list will be available for debates
ALLOWED_MODELS=openai/gpt-5.1-chat,anthropic/claude-haiku-4.5,google/gemini-2.5-flash-lite,x-ai/grok-4-fast,qwen/qwen-turbo,deepseek/deepseek-chat-v3.1

# Database Configuration
# SQLite database URL (auto-configured, no need to change)
# DATABASE_URL=sqlite:///./storage/polydebate.db

# Email Configuration
EMAIL_SERVICE=gmail

# Gmail Configuration
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
EMAIL_FROM_ADDRESS=your_email@gmail.com
EMAIL_FROM_NAME=PolyDebate
EMAIL_FALLBACK_TO_CONSOLE=true

# Application Settings
APP_NAME=PolyDebate
SUPPORT_EMAIL=support@polydebate.com

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_MINUTES=43200

# Verification Code Settings
CODE_LENGTH=6
CODE_TYPE=numeric
CODE_EXPIRATION_MINUTES=15

# Rate Limiting
MAX_CODE_REQUESTS_PER_HOUR=5
MAX_VERIFICATION_ATTEMPTS=5

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE=logs/app.log
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
